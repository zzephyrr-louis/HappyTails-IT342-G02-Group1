{
  "info": {
    "name": "HappyTails API",
    "description": "Complete API collection for HappyTails Pet Adoption Platform",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8080/api",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register Adopter (FR-1)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"newadopter@test.com\",\n  \"password\": \"Test123!\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/register-adopter",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "register-adopter"]
            }
          }
        },
        {
          "name": "Register Shelter Staff (FR-4)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"newstaff@shelter.com\",\n  \"password\": \"Staff123!\",\n  \"shelterId\": 1\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/register-staff",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "register-staff"]
            }
          }
        },
        {
          "name": "Login Adopter (FR-2)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.collectionVariables.set(\"token\", jsonData.token);",
                  "    console.log(\"Token saved: \" + jsonData.token);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"john.doe@gmail.com\",\n  \"password\": \"Test123!\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "login"]
            }
          }
        },
        {
          "name": "Login Staff",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.collectionVariables.set(\"token\", jsonData.token);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"staff1@happypaws.com\",\n  \"password\": \"Staff123!\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "login"]
            }
          }
        }
      ]
    },
    {
      "name": "Pets",
      "item": [
        {
          "name": "Get All Pets (FR-9)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/pets",
              "host": ["{{baseUrl}}"],
              "path": ["pets"]
            }
          }
        },
        {
          "name": "Get Pet by ID (FR-12)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/pets/1",
              "host": ["{{baseUrl}}"],
              "path": ["pets", "1"]
            }
          }
        },
        {
          "name": "Search Pets - By Species (FR-10)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/pets/search?species=Dog",
              "host": ["{{baseUrl}}"],
              "path": ["pets", "search"],
              "query": [
                {
                  "key": "species",
                  "value": "Dog"
                }
              ]
            }
          }
        },
        {
          "name": "Search Pets - Multiple Filters (FR-10, FR-11)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/pets/search?species=Dog&size=Large&shelterLocation=Cebu&gender=Female",
              "host": ["{{baseUrl}}"],
              "path": ["pets", "search"],
              "query": [
                {
                  "key": "species",
                  "value": "Dog"
                },
                {
                  "key": "size",
                  "value": "Large"
                },
                {
                  "key": "shelterLocation",
                  "value": "Cebu"
                },
                {
                  "key": "gender",
                  "value": "Female"
                }
              ]
            }
          }
        },
