          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Buddy\",\n  \"species\": \"Dog\",\n  \"breed\": \"Labrador\",\n  \"age\": \"3 years\",\n  \"size\": \"Large\",\n  \"gender\": \"Male\",\n  \"description\": \"Friendly and playful labrador\",\n  \"temperament\": \"Friendly, Energetic, Loyal\",\n  \"photosJson\": \"[\\\"https://example.com/photo1.jpg\\\"]\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/pets",
              "host": ["{{baseUrl}}"],
              "path": ["pets"]
            }
          }
        },
